/* wallpaper-menu — نفس حجم launcher-menu مع icon مصغر للخلفية */

@theme "~/.config/rofi/theme.rasi"

configuration {
	font:            "Commit Mono Nerd Font 12";
	show-icons:      true;
	fixed-num-lines: true;
	disable-history: true;
	hide-scrollbar:  true;
}

window {
	width:            375px;
	border:           4px;
	border-radius:    0px;
	border-color:     @main-br;
	background-color: @main-bg;
	children:         [ mainbox ];
}

mainbox {
	margin:           0 0 -1px;
	spacing:          0;
	background-color: @main-br;
	text-color:       @main-fg;
	children:         [ textbox-custom, listview, inputbar ];
}

textbox-custom {
	font:             "Commit Mono Nerd Font Bold 12";
	horizontal-align: 0.5;
	padding:          2px 0;
	background-color: @select-bg;
	text-color:       @select-fg;
	expand:           false;
	content:          "󰸉 Wallpapers";
}

listview {
	border:           2px 0 0;
	border-radius:    0px;
	border-color:     @main-br;
	lines:            8;
	fixed-height:     true;
	dynamic:          false;
	cycle:            true;
	margin:           0 0 -4px;
	padding:          8px 8px 12px;
	background-color: @main-bg;
}

element {
	orientation:      horizontal;
	padding:          4px 8px;
	cursor:           pointer;
	background-color: inherit;
	text-color:       @main-fg;
	spacing:          8px;
}

element selected active,
element selected normal {
	border-radius:    0px;
	background-color: @select-bg;
	text-color:       @select-fg;
}

element-icon {
	size:             42px;
	cursor:           inherit;
	background-color: transparent;
	vertical-align:   0.5;
}

element-text {
	padding:          0 4px;
	cursor:           inherit;
	background-color: inherit;
	text-color:       inherit;
	vertical-align:   0.5;
}

inputbar {
	margin:           -40px 8px 8px;
	border-radius:    0px;
	spacing:          inherit;
	background-color: @input-bg;
	text-color:       inherit;
	children:         [ prompt, entry ];
}

prompt {
	padding:          8px 6px 8px 12px;
	background-color: inherit;
	text-color:       inherit;
}

entry {
	placeholder:      "Search...";
	padding:          8px 12px 8px 0;
	cursor:           text;
	background-color: inherit;
	text-color:       inherit;
}

error-message {
	enabled:          false;
}
